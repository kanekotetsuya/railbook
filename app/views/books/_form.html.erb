<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(book) do |f| %>
    <div class="field">
      <%= f.label :isbn, 'ISBNコード' %>
      <%= f.text_field :isbn %>
    </div>

    <div class="field">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :price, '価格' %>
      <%= f.number_field :price %>
    </div>

    <div class="field">
      <%= f.label :publish, '出版社' %>
      <%= f.text_field :publish %>
    </div>

    <div class="field">
      <%= f.label :published, '出版日' %>
      <%= f.date_select :published %>
    </div>

    <div class="field">
      <%= f.label :dl, 'ダウンロードの有無' %>
      <%= f.check_box :dl %>
    </div>

    <div class="actions">
      <%= f.submit '保存', data: { confirm: '保存してもよいですか？', disable_with: 'ただいま処理中です...' } %>
    </div>
  <% end %>
<% end %>
